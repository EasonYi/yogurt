<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.10.0.xsd">
    <logging>WARN</logging>
    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true&amp;rewriteBatchedStatements=TRUE&amp;useSSL=false&amp;serverTimezone=UTC</url>
        <user>root</user>
        <password>123456</password>
    </jdbc>
    <generator>
        <strategy>
            <name>com.github.jyoghurt.cg.JooqGeneratorStrategy</name>
        </strategy>
        <database>
            <name>org.jooq.util.mysql.MySQLDatabase</name>
            <includes>test</includes>
            <excludes/>
            <inputSchema>military</inputSchema>

            <forcedTypes>
                <!-- 使用converter -->
                <forcedType>
                    <enumConverter>true</enumConverter>
                    <userType>com.test.enums.TypeEnum</userType>
                    <expression>.*\.test\.type</expression>
                    <types>.*</types>
                </forcedType>
            </forcedTypes>

        </database>

        <target>
            <packageName>com.test</packageName>
            <directory>src/main/java</directory>

        </target>
        <generate>
            <globalObjectReferences>false</globalObjectReferences>
            <generatedAnnotation>false</generatedAnnotation>
            <indexes>false</indexes>
            <relations>false</relations>
            <tables>false</tables>
            <javaTimeTypes>true</javaTimeTypes>
        </generate>
    </generator>
</configuration>
