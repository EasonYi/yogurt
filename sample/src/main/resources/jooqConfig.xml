<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.11.0.xsd">
    <logging>WARN</logging>
    <jdbc>
        <driver>com.mysql.jdbc.Driver</driver>
        <url>jdbc:mysql://localhost:3306/military?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true&amp;rewriteBatchedStatements=TRUE&amp;useSSL=false&amp;serverTimezone=UTC</url>
        <user>root</user>
        <password>123456</password>
    </jdbc>
    <generator>
        <strategy>
            <name>com.github.yogurt.cg.JooqGeneratorStrategy</name>
        </strategy>
        <database>
            <name>org.jooq.meta.mysql.MySQLDatabase</name>
            <includes>test</includes>
            <inputSchema>test</inputSchema>
            <outputSchemaToDefault>true</outputSchemaToDefault>
            <forcedTypes>
                <forcedType>
                    <name>BOOLEAN</name>
                    <expression>is_deleted</expression>
                </forcedType>

                <!-- 需要手动设置Enum配置 -->
                <forcedType>
                    <enumConverter>true</enumConverter>
                    <userType>com.github.yogurt.sample.test.enums.TypeEnum</userType>
                    <expression>.*\.test\.type</expression>
                    <types>.*</types>
                </forcedType>
            </forcedTypes>
        </database>

        <target>
            <packageName>com.github.yogurt.sample.test</packageName>
            <directory>src/main/java</directory>

        </target>
        <generate>
            <daos>true</daos>
            <records>false</records>
            <globalObjectReferences>false</globalObjectReferences>
            <generatedAnnotation>false</generatedAnnotation>
            <indexes>false</indexes>
            <relations>false</relations>
            <tables>false</tables>
            <javaTimeTypes>true</javaTimeTypes>
        </generate>
    </generator>
</configuration>
